{
    "name": "vehicle-registry-api",
    "version": "0.3.1-dev",
    "description": "Backend API for a vehicle registration web app that allows entrance and leave.",
    "main": "index.js",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "npm run test && tsc && tsc-alias",
        "start": "node dist/app/index.js",
        "start:dev": "npx nodemon --exec 'npm run lint && tsx src/app/index.ts' src/index.ts",
        "lint": "eslint .",
        "test": "cross-env NODE_ENV=test jest --coverage",
        "test:coverage": "cross-env NODE_ENV=test jest --coverage",
        "test:watch": "cross-env NODE_ENV=test jest --coverage --watchAll",
        "view:coverage": "serve coverage/lcov-report",
        "clean": "rm -rf dist/ coverage/ src/**/*.js src/**/*.map"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tobiasbriones/vehicle-registry-api.git"
    },
    "keywords": [
        "nodejs",
        "expressjs",
        "api",
        "typescript",
        "web-development",
        "vehicle-registry",
        "backend"
    ],
    "author": "Tobias Briones",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tobiasbriones/vehicle-registry-api/issues"
    },
    "homepage": "https://github.com/tobiasbriones/vehicle-registry-api#readme",
    "dependencies": {
        "body-parser": "^1.20.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "http-status-codes": "^2.3.0",
        "pg": "^8.13.1",
        "zod": "^3.23.8"
    },
    "devDependencies": {
        "@babel/core": "^7.26.0",
        "@babel/preset-env": "^7.26.0",
        "@babel/preset-typescript": "^7.26.0",
        "@eslint/js": "^9.11.0",
        "@jest/globals": "^29.7.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.8.6",
        "@types/pg": "^8.11.10",
        "@types/supertest": "^6.0.2",
        "babel-jest": "^29.7.0",
        "cross-env": "^7.0.3",
        "eslint": "^9.11.0",
        "eslint-plugin-jest": "^28.8.3",
        "eslint-plugin-node": "^11.1.0",
        "globals": "^15.9.0",
        "jest": "^29.7.0",
        "node-mocks-http": "^1.16.1",
        "nodemon": "^3.1.7",
        "serve": "^14.2.4",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "tsc-alias": "^1.8.10",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.6.0"
    }
}
